{
    "compilerOptions": {
        "module": "ES6",
        "target": "ES6",
		"outDir": "./",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "allowJs": true,
        "noEmit": false,
        "isolatedModules": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react-jsx",
		"baseUrl": "./",
		"paths": {
			"@": ["src/"]
		}
    },
    "include": [
        "src/**/*"
    ],
	"exclude": ["node_modules", "dist"]
}
